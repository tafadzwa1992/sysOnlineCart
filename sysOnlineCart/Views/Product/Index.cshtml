@model IEnumerable<sysOnlineCart.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    <h4>Product</h4>
    <hr /> 
    


    @foreach(var item in Model)
    {
        <div class="main-content">
            <div class="content-image">
                <a href="#"><img src="'@Url.Content("~/Photo" + item.ImageUrl)'"/></a>
            </div>
            <div class="content-title">
                <a href="#">@item.productName</a>
            </div>
            <div class="content-price">
                <a href="#">@item.productPrice</a>
            </div>
            <div class="content-cart">
                @Html.ActionLink("Add to cart", "OrderNow", "CartController", new { id = item.productId })
            </div>
        </div>
    }

